<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/logreg_bkg_design"
    android:backgroundTint="@color/group_purple"
    android:paddingTop="15dp"
    android:paddingHorizontal="20dp"
    android:layout_marginHorizontal="20dp">
    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Group name 1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/group_num_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42 members"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/group_icon_bkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_icon_bkg_design"
            android:backgroundTint="@color/group_orange"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:id="@+id/group_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="70dp"
                android:minHeight="70dp"
                android:src="@drawable/radio"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>