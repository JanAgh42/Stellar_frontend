<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupActivity"
    android:background="@color/background">
    <include
        layout="@layout/app_top_bar"
        android:id="@+id/cgroup_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <include
        layout="@layout/app_group"
        android:id="@+id/cgroup_example_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cgroup_top_bar"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logreg_bkg_design"
        android:backgroundTint="@color/component_bkg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/cgroup_example_group">

        <EditText
            android:id="@+id/cgroup_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group name"
            android:textColor="@color/text_gray"
            android:backgroundTint="@color/text_gray"
            android:paddingTop="0dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background color"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>
        <include
            layout="@layout/app_choose_color_panel"
            android:id="@+id/cgroup_bkg_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icon background color"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>
        <include
            layout="@layout/app_choose_color_panel"
            android:id="@+id/cgroup_icon_bkg_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group icon"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biotech"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/palette"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/monitoring"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forest"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_book"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/laptop_chromebook"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outdoor_grill"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group tags"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">
                <include
                    layout="@layout/app_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"/>
                <include
                    layout="@layout/app_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"/>
                <include
                    layout="@layout/app_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"/>
                <include
                    layout="@layout/app_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


    <include
        layout="@layout/app_menu_bar"
        android:id="@+id/cgroup_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>